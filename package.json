{
  "name": "polychrome.p5",
  "version": "1.0.6",
  "description": "A colorful text painter",
  "main_orig": "index.html/sketch.js",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "npm run clean && webpack -p",
    "clean": "rm -rf dist",
    "deploy": "gh-pages -d dist",
    "bump": "npm version patch",
    "publish": "npm run bump && npm run build && npm run deploy",
    "lint": "standard --fix",
    "lint:report": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichaelPaulukonis/polychrome.p5.git"
  },
  "keywords": [
    "p5",
    "text",
    "paint"
  ],
  "author": "Michael J. Paulukonis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MichaelPaulukonis/polychrome.p5/issues"
  },
  "homepage": "https://github.com/MichaelPaulukonis/polychrome.p5#readme",
  "dependencies": {
    "dat.gui": "^0.7.3",
    "p5": "^0.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^8.0.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "copy-webpack-plugin": "^4.6.0",
    "cypress": "^3.1.4",
    "eslint-config-p5js": "^1.0.1",
    "eslint-plugin-cypress": "^2.2.0",
    "gh-pages": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "standard": "^11.0.1",
    "start-server-and-test": "^1.7.11",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "eslintConfig": {
    "extends": "p5js"
  },
  "standard": {
    "ignore": [
      "**/dat.gui.js"
    ],
    "extends": [
      "p5js",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "cypress"
    ],
    "env": {
      "cypress/globals": true
    },
    "globals": [
      "VERSION",
      "IMAGES"
    ]
  }
}
